{
  "name": "better-auth-nuxt-poc",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@10.27.0",
  "scripts": {
    "build": "NODE_OPTIONS='--max-old-space-size=4096' nuxt build",
    "dev": "nuxt dev",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "typecheck": "nuxt typecheck",
    "auth:schema": "BETTER_AUTH_CLI=true pnpm dlx @better-auth/cli generate --config server/utils/auth.ts --output server/db/schema/auth.ts",
    "db:generate": "nuxt db generate",
    "db:migrate:remote": "wrangler d1 migrations apply DB --remote"
  },
  "dependencies": {
    "@iconify-json/lucide": "1.2.82",
    "@libsql/client": "0.17.0",
    "@nuxt/ui": "4.3.0",
    "@nuxthub/core": "0.10.4",
    "better-auth": "1.4.0",
    "drizzle-orm": "0.45.1",
    "nuxt": "4.2.2"
  },
  "devDependencies": {
    "@antfu/eslint-config": "6.7.3",
    "@nuxt/eslint": "1.12.1",
    "drizzle-kit": "0.31.8",
    "eslint": "^9.39.2",
    "eslint-plugin-better-tailwindcss": "3.8.0",
    "eslint-plugin-format": "1.2.0",
    "typescript": "5.9.3",
    "vue-tsc": "3.2.1",
    "wrangler": "4.56.0"
  }
}
